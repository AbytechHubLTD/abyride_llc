generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Reservation {
  id           String   @id @default(uuid())
  fullName     String
  email        String
  phoneNumber  String
  pickup       String
  dropoff      String
  distance     Float
  duration     String
  traffic      String
  price        Float
  paymentUrl   String
  createdAt    DateTime @default(now())
}


